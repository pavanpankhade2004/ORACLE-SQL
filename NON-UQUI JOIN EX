INSERT INTO PROJECTS VALUES (104, 'EMPLOYEE PAYROLL', 1);
INSERT INTO PROJECTS VALUES (105, 'BANK ACCOUNT SYSTEM', NULL);



CREATE TABLE CUSTOMERS (
    CUSTOMERID   NUMBER(10) PRIMARY KEY,
    CUSTOMRNAME  VARCHAR2(10)
);

INSERT INTO CUSTOMERS  VALUES (1, 'SURYA');
INSERT INTO CUSTOMERS  VALUES (2, 'ANUSHKA');
INSERT INTO CUSTOMERS  VALUES (3, 'KIRAN');
INSERT INTO CUSTOMERS  VALUES (4, 'KAVYA');
INSERT INTO CUSTOMERS  VALUES (5, 'GOWTHAM');

CREATE TABLE ORDERS (
    ORDERID     NUMBER(10) PRIMARY KEY,
    CUSTOMERID  NUMBER(10) REFERENCES CUSTOMERS(CUSTOMERID),
    ORDERDATE   DATE,
    TOTAMOUNT   NUMBER(10)
);

