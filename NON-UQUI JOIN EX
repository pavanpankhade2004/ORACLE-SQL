CREATE TABLE PROJECTS (
    PID   NUMBER(10) PRIMARY KEY,
    PNAME VARCHAR2(30),
    EMPID NUMBER(10) 
);

INSERT INTO PROJECTS VALUES (101, 'SENTIMENT ANALYSIS', 3);
